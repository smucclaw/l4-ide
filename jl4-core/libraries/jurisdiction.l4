    ELSE IF code EQUALS `Spain alpha-2` THEN RIGHT "Spain"
    ELSE IF code EQUALS `Hong Kong alpha-2` THEN RIGHT "Hong Kong"
    ELSE LEFT (CONCAT "Unknown country code: ", code)

