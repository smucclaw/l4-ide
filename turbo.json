{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**",
        "out/**",
        "build/**",
        "**/*.tsbuildinfo",
        ".svelte-kit/**",
        "ts-apps/vscode/static/**"
      ],
      "env": ["GIT_COMMIT_HASH"]
    },
    "lint": {
      "dependsOn": ["^build", "^lint"]
    },
    "check": {
      "dependsOn": ["^build", "^check"]
    },
    "test": {
      "dependsOn": ["^check"],
      "passThroughEnv": ["XAUTHORITY", "DISPLAY"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
