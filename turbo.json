{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "out/**", "build/**", "**/*.tsbuildinfo"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "test": {
      "dependsOn": ["^check"],
      "passThroughEnv": ["XAUTHORITY", "DISPLAY"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
