-- Test file for nested record structures with YAML metadata

DECLARE Address HAS
  street IS A STRING
  city IS A STRING
  zipCode IS A STRING

DECLARE ContactInfo HAS
  email IS A STRING
  phone IS A STRING

DECLARE Person HAS
  name IS A STRING
  age IS A NUMBER
  address IS AN Address
  contact IS A ContactInfo

@export default Greet a person with their full address
GIVEN p IS A Person
GIVETH A STRING
greetPerson p MEANS
  CONCAT "Hello, ", p's name, " from ", p's address's city
