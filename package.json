{
  "name": "typescript-monorepo",
  "private": true,
  "workspaces": [
    "ts-apps/*",
    "ts-shared/*"
  ],
  "scripts": {
    "build": "turbo build --concurrency=1",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo run test",
    "check": "turbo run check",
    "format": "prettier --write \"**/*.{js,ts,mts,jsx,tsx,json,css,scss,md,html,yaml,svelte}\"",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "packageManager": "npm@11.0.0",
  "engines": {
    "node": ">=20"
  },
  "overrides": {
    "vite": "6.0.7"
  }
}
