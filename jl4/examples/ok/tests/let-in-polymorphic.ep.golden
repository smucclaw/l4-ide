-- LET...IN with polymorphic type inference
-- Test case 6 from spec: Type inference with polymorphic bindings

-- Identity function used with different types
DECIDE testPolyIdentity IS
  LET
    id x IS x
  IN (id 42) PLUS (id 10)

-- Polymorphic function applied to different argument types
DECIDE testPolyApply IS
  LET
    apply f x IS f x
    double n IS n TIMES 2
  IN apply double 21

-- Const function (returns first argument, ignores second)
DECIDE testPolyConst IS
  LET
    const x y IS x
  IN const 42 0

-- Compose two functions
DECIDE testPolyCompose IS
  LET
    compose f g x IS f (g x)
    addOne n IS n PLUS 1
    double n IS n TIMES 2
  IN compose addOne double 10
