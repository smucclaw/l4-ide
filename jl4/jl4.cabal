cabal-version: 3.0
name: jl4
version: 0.1
build-type: Simple
tested-with: GHC==9.6.6

common defaults
  default-language: GHC2021
  ghc-options: -Wall -Wderiving-typeable -Wunused-packages -Werror
  default-extensions:
    BlockArguments
    DeriveAnyClass
    DerivingStrategies
    DerivingVia
    DuplicateRecordFields
    NoFieldSelectors
    OverloadedRecordDot
    OverloadedStrings
    OverloadedLabels
    LambdaCase
    -- This is annoying with fourmolu
    NoImportQualifiedPost
  build-depends:
    base

library
  import: defaults
  hs-source-dirs: src
  build-depends:
    containers,
    data-default,
    deepseq,
    extra,
    generics-sop,
    megaparsec,
    mtl,
    logict,
    optics,
    optics-core,
    optparse-applicative,
    pretty-simple,
    prettyprinter,
    text >= 2.1,
    tree-diff
  exposed-modules:
    Base
    Base.Map
    Base.Set
    Base.Pretty
    Base.Text
    L4.Annotation
    L4.Evaluate
    L4.Evaluate.Value
    L4.ExactPrint
    L4.Main
    L4.Lexer
    L4.Parser
    L4.Parser.ResolveAnnotation
    L4.Parser.SrcSpan
    L4.ParserCombinators
    L4.Print
    L4.Syntax
    L4.Transform
    L4.TypeCheck

executable jl4-cli
  import: defaults
  hs-source-dirs: app
  build-depends:
    jl4
  main-is: Main.hs

executable jl4-lsp
  import: defaults
  ghc-options:
    -threaded
    -rtsopts
    -- disable idle GC
    -- increase nursery size
    -- Enable collection of heap statistics
    "-with-rtsopts=-I0 -A128M -T"
  hs-source-dirs: lsp
  build-depends:
    prettyprinter-ansi-terminal ^>=1.1.3,
    lens-aeson ^>=1.2.3,
    focus ^>=1.0.3.2,
    time,
    sorted-list ^>=0.2.2.0,
    unordered-containers ^>=0.2.20,
    stm-containers ^>=1.2.1,
    data-default ^>=0.8.0.0,
    enummapset ^>=0.7.3.0,
    hashable ^>=1.5.0.0,
    async ^>=2.2.5,
    hls-graph ^>=2.9.0.0,
    hw-fingertree,
    bytestring ^>=0.11.5.3,
    list-t,
    jl4,
    autodocodec,
    aeson,
    binary,
    containers,
    co-log-core,
    websockets,
    deepseq,
    Diff,
    directory,
    extra,
    filepath,
    generics-sop,
    Glob,
    lens,
    lsp-types ^>=2.3.0.0,
    lsp ^>=2.7.0.0,
    mtl,
    optics,
    prettyprinter,
    safe-exceptions,
    stm,
    text >= 2.1,
    text-rope,
    transformers,
    unliftio,
    vector,
    fuzzy,
    file-io,
    cassava,
    monoidal-containers,

  if os(windows)
    build-depends: Win32
  else
    build-depends: unix

  main-is: Server.hs
  other-modules:
    Control.Concurrent.Strict
    LSP.Logger
    LSP.Core.Action
    LSP.Core.Debouncer
    LSP.Core.FileExists
    LSP.Core.FileStore
    LSP.Core.FileUtils
    LSP.Core.PositionMapping
    LSP.Core.IdeConfiguration
    LSP.Core.OfInterest
    LSP.Core.ProgressReporting
    LSP.Core.RuleTypes
    LSP.Core.Shake
    LSP.Core.Service
    LSP.Core.WorkerThread
    LSP.Core.Types.Diagnostics
    LSP.Core.Types.Location
    LSP.Core.Types.Monitoring
    LSP.Core.Types.Options
    LSP.Core.Types.Shake

    LSP.SemanticTokens
    LSP.L4.Base
    LSP.L4.Config
    LSP.L4.Handlers
    LSP.L4.Viz.VizExpr
    LSP.L4.Viz.Ladder
    LSP.L4.LanguageServer
    LSP.L4.Rules
    LSP.L4.SemanticTokens

test-suite jl4-test
  import: defaults
  type: exitcode-stdio-1.0
  hs-source-dirs: tests
  main-is: Main.hs
  other-modules:
    Paths_jl4
  autogen-modules:
    Paths_jl4
  build-depends:
    filepath,
    Glob,
    hspec,
    hspec-golden,
    optics,
    silently,
    text >= 2.1,
    jl4
