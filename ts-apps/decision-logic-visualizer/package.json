{
  "name": "@repo/decision-logic-visualizer",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "npm run package",
    "build:styles": "npx @tailwindcss/cli -i src/style.css -o dist/style.css",
    "preview": "vite preview",
    "prepare": "svelte-kit sync",
    "package": "svelte-kit sync && svelte-package && npm run build:styles && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "lint": "eslint --max-warnings=0 .",
    "test": "vitest"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "src/lib",
    "!src/lib/**/*.test.*",
    "!src/lib/**/*.spec.*",
    "src/**/*.css"
  ],
  "prettier": "@repo/prettier-config",
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/lodash": "^4.17.14",
    "autoprefixer": "^10.4.20",
    "bits-ui": "^1.3.6",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.13.0",
    "postcss": "^8.5.2",
    "prettier": "^3.4.1",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.2",
    "svelte": "^5.19.0",
    "svelte-check": "^4.1.4",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.7",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.4",
    "@repo/viz-expr": "*",
    "@tailwindcss/cli": "^4.0.9",
    "@tailwindcss/vite": "^4.0.6",
    "@xyflow/svelte": "^1.0.0-next.4",
    "csstype": "^3.1.3",
    "effect": "^3.11.0",
    "elkjs": "^0.9.3",
    "esbuild": "^0.24.2",
    "graphology": "^0.26.0",
    "graphology-dag": "^0.4.1",
    "lodash": "^4.17.21",
    "lucide-svelte": "^0.477.0",
    "runed": "^0.23.3",
    "tailwind-variants": "^1.0.0",
    "ts-pattern": "^5.6.1"
  }
}
