{
  "name": "l4-vscode",
  "displayName": "L4 Rules-as-code",
  "description": "Language support for L4 rules-as-code with syntax highlighting, IntelliSense, and ladder diagram visualization",
  "readme": "MARKETPLACE_README.md",
  "license": "Apache-2.0",
  "version": "1.1.0",
  "publisher": "legalese",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "l4",
    "legal",
    "jl4",
    "language",
    "legislation",
    "rules-as-code",
    "rules"
  ],
  "icon": "static/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "publishConfig": {
    "files": [
      "!**/.DS_Store",
      "!**/.vscode/**",
      "static",
      "out",
      "src"
    ]
  },
  "engines": {
    "vscode": "^1.94.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/legalese/l4-ide",
    "directory": "ts-apps/vscode"
  },
  "activationEvents": [
    "onLanguage:l4"
  ],
  "contributes": {
    "configuration": {
      "properties": {
        "jl4.serverExecutablePath": {
          "type": "string",
          "default": null,
          "description": "Path to the jl4-lsp executable"
        },
        "jl4.decisionServiceUrl": {
          "type": "string",
          "default": "http://localhost:8001",
          "description": "Base URL for jl4-decision-service (used for query planning)"
        }
      }
    },
    "languages": [
      {
        "id": "l4",
        "aliases": [
          "l4"
        ],
        "extensions": [
          ".l4"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "l4.visualize",
        "title": "Visualize L4 expression"
      }
    ]
  },
  "configuration": {
    "jl4.trace.server": {
      "scope": "resource",
      "type": "string",
      "enum": [
        "off",
        "messages",
        "verbose"
      ],
      "default": "off",
      "description": "Traces the communication between VS Code and the language server."
    },
    "jl4.serverExecutablePath": {
      "scope": "machine-overridable",
      "type": "string",
      "default": "",
      "markdownDescription": "Manually set a language server executable. Can be something on the $PATH or the full path to the executable itself. "
    }
  },
  "prettier": "@repo/prettier-config",
  "dependencies": {
    "@repo/vscode-webview-rpc": "*",
    "@repo/viz-expr": "*",
    "@repo/webview": "*",
    "jl4-client-rpc": "*",
    "minimatch": "^10.0.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-messenger": "^0.5.1",
    "vscode-messenger-common": "^0.5.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.17.0",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@types/fs-extra": "^11.0.4",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.11",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.6.0",
    "babel-loader": "^9.2.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "globals": "^15.13.0",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run lint && npm run bundle-esbuild",
    "build": "npm run clean && npm run prepare:webview && tsc -b tsconfig.json && npm run bundle-esbuild",
    "prepare:webview": "mkdir -p ./static/webview && cp -r ../webview/build/* ./static/webview/",
    "bundle-esbuild": "node scripts/build.mjs",
    "test": "tsc -b tsconfig.json && node --test out/unit-tests/*.test.js",
    "package": "npm run lint && npx vsce package",
    "dev": "npm run build --watch",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,md,mdx,css,yaml}\" --ignore-path ../../.prettierignore",
    "lint": "eslint --max-warnings=0 ./src",
    "lint-fix": "eslint ./src --fix",
    "clean": "git clean -fdx out || echo 'git not available'"
  }
}
