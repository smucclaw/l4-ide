{
  "name": "jl4-web",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "prepare-examples": "node --loader ts-node/esm scripts/copy-examples.ts",
    "dev": "npm run prepare-examples && svelte-kit sync && vite dev",
    "build": "npm run prepare-examples && npm run clean && svelte-kit sync && vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "lint": "eslint --max-warnings=0 .",
    "clean": "git clean -fdx build .sveltekit || echo 'git not available'"
  },
  "prettier": "@repo/prettier-config",
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.0.6",
    "bits-ui": "^1.3.11",
    "clsx": "^2.1.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "lucide-svelte": "^0.479.0",
    "paneforge": "^1.0.0-next.4",
    "prettier": "^3.4.1",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.25.0",
    "svelte-check": "^4.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "@codingame/monaco-vscode-api": "^14.0.4",
    "@repo/viz-expr": "*",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@ym-han/monaco-error-lens": "^0.1.3",
    "@zerodevx/svelte-toast": "^0.9.6",
    "jl4-client-rpc": "*",
    "l4-ladder-visualizer": "*",
    "monaco-editor": "npm:@codingame/monaco-vscode-editor-api@^14.0.4",
    "monaco-editor-wrapper": "^6.4.0",
    "monaco-languageclient": "^9.4.0",
    "runed": "^0.23.3",
    "vscode": "npm:@codingame/monaco-vscode-extension-api@^14.0.4",
    "vscode-languageclient": "^9.0.1",
    "vscode-ws-jsonrpc": "^3.4.0"
  }
}
