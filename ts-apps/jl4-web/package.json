    "prettier": "^3.4.1",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "@repo/viz-expr": "*",
    "@codingame/monaco-vscode-api": "^14.0.4",
    "@repo/decision-logic-visualizer": "*",
