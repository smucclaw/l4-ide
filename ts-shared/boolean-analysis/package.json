    "lint-fix": "eslint . --fix",
    "test": "vitest --run"
  },
  "packageManager": "npm@11.0.0",
  "engines": {
    "node": ">=20"
  },
  "prettier": "@repo/prettier-config",
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.16.0",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "@repo/viz-expr": "*"
  }
}
