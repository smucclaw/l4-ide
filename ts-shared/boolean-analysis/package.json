{
  "name": "@repo/boolean-analysis",
  "version": "1.0.0",
  "private": true,
  "description": "UI-free boolean decision query analysis (support, restriction, ranking) shared across the repo",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "git clean -fdx dist || echo 'git not available'",
    "build": "npm run clean && tsc",
