{
  "$schema": "https://charm.land/crush.json",
  "lsp": {
    "l4": {
      "command": "jl4-lsp"
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"]
    }
  },
  "permissions": {
    "allowed_tools": [
      "view",
      "ls",
      "grep",
      "rg",
      "git",
      "mv",
      "rm",
      "gh",
      "edit",
      "bash",
      "ssh",
      "mcp_context7_get-library-doc"
    ]
  }
}
